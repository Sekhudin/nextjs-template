{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "s/lib/utils": ["./src/packages/utils/index.ts"],
      "src/*": ["./src/*"],
      "public/*": ["./public/*"],
      "components/*": ["./src/components/*"],
      "configs/*": ["./src/configs/*"],
      "modules/*": ["./src/modules/*"],
      "packages/*": ["./src/packages/*"],
      "stores/*": ["./src/stores/*"],
      "styles/*": ["./src/styles/*"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
